  <script>
   function details(){
      var dummy = document.createElement("textarea");
      dummy.value = ROOM_ID
      document.body.appendChild(dummy);
      console.log(dummy)
      //console.log(ROOM_ID)
      console.log(copycode[0])
      dummy.select()
      document.execCommand("copy")
      alert("Copied the call code: " + dummy.value);
      document.body.removeChild(dummy);
   }
   var dummy2
   window.onload = function() {
      const username = prompt("Chat with name:");
      if (username == ""){
              document.getElementById("userpara").innerHTML = "Anonymous";
           }
           else if (username != null) {
              document.getElementById("userpara").innerHTML = username;
           } else if (username == null) {
              document.getElementById("userpara").innerHTML = "Anonymous";
           }
   }
    function back(){
      var dummy = document.createElement("textarea");
      document.body.appendChild(dummy);
      dummy.select()
      alert("Leaving Room" );
      document.body.removeChild(dummy);
      window.location.href='/';
      } 
</script>
